<ul class="entity-items">
    {% for category in pager.getResults %}
        <li>
            <div class="entity-name"><a href="{{ path('product_category_show', {'id': category.0.category_id}) }}">{{ category.0.name }}</a></div>
            <div class="entity-added"> - {{"added at"|trans}} {{ category.0.created_at|date('d/m/Y') }}</div>
            <div class="entity-unities"> - 
                {% if category.pcount == 1 %}
                    {{"one entity"|trans}}
                {% else %}
                    {{ category.pcount }} {{"entities"|trans}}
                {% endif %}
            </div>
            <div class="entity-links">
                <a href="{{ path('user_details', { 'id' : category.0.user.user_id }) }}">
                    {% if category.0.user.sex == 'm' %}
                        <img src="{{ asset('images/user.png') }}" />
                    {% else %}
                        <img src="{{ asset('images/user-woman.png') }}" />
                    {% endif %}
                </a>
                <a href="{{ path('product_category_edit', {'id': category.0.category_id}) }}">
                    <img src="{{ asset('images/file-icon.png') }}" />
                </a>
                <a href="{{ path('product_category_show', {'id': category.0.category_id }) }}">
                    <img src="{{ asset('images/info-icon.png') }}" />
                </a>
            </div>
            <div class="clear"></div>
        </li>  
    {% endfor %}
</ul>

{% if pager.isPaginable %}
    {{ paginateAjax(pager, block_length, { 'page' : 1 }) }}
{% endif %}